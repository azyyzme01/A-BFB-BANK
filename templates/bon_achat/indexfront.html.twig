{% extends 'base.html.twig' %}

{% block title %}BonAchat index{% endblock %}

{% block body %}
<section id="blog-archive">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="blog-archive-area">
            <div class="row">
              <div class="col-md-2"></div>
              <div class="col-md-8">
                <div class="blog-archive-left">
                  <!-- Start blog news single -->
        {% for bon_achat in bon_achats %}

                  <article class="blog-news-single">

                    <div class="blog-news-img">
                      <img src="{{asset('assets/images/blog-img-1.jpg')}}" alt="image">
                    </div>
                    <div class="blog-news-title">

                      <h2>{{ bon_achat.description }}</h2>
                      <p>De montant  <a class="blog-author" href="#">{{ bon_achat.montant }} TND</a> <span class="blog-date">by {{ bon_achat.convention }} jusqu'a {{ bon_achat.dateExp ? bon_achat.dateExp|date('Y-m-d') : '' }} </span></p>
                              {% endfor %}

                    </div>
                    
                  </article>

                  <!-- Start Comment box -->
                  
                </div>
              </div>
              <div class="col-md-2"></div>             
            </div>
          </div>
        </div>
      </div>
    </div>  
  </section>
  {% endblock %}

